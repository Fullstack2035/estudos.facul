def calculadora():
    # nossa calculadora simples
    print('--- calculadora ---')
    
    mais = input("digite o primeiro numero:")
    operador = input("digite operador(+,-,*,**,/):")
    numero = input("digite o segundo numero")
    
    try:
        
       num1 = float(mais)
       num2 = float(numero)
       
    except ValueError:
        print("erro algo deu errado")   
        return 
    resultado = None
    
    if operador == '+':
        resultado = num1 + num2
    elif operador == '-':
        resultado = num1 - num2
    elif operador == '*': 
         resultado = num1 * num2     
    elif operador == '**':
        resultado = num1 ** num2
    elif operador == '/':
        resultado = num1 / num2
        if num2 == 0:
            print("erro: nao e possivel dividir por zero")
            return
        else:
            resultado = num1 / num2
    
    else:
        print(f"erro: operacao '{operador}' invalida. use apenas +, -, *, **, ou /.")
        return 
    print(f"\n0 resultado e {num1} {operador} {num2} e:{resultado}")
if __name__=="__main__":
    calculadora()  
